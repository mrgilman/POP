<div id="wrapper">
  <div id="content">
    <div id="problemHead">
      <h1>What people are thinking</h1>
      <%= link_to "Add a New Problem, #{current_user.profile.first_name}", new_problem_path, :id => "indexNewProblem" %>
    </div>
    <div id="my-problems">
      <h1>Your Problems</h1>
      <% current_user.problems.each do |problem| %>
        <p class="user_problem" id="problem_<%= problem.id %>"><%= link_to problem.body, problem_path(problem) %></p>
        <% if problem.solutions.any? %>
          <p><%= problem.solutions.count %></p>
        <% end %>
      <% end %>
    </div>
    <div="others-problems">

    </div>
  </div>
</div>