<div id="profile_info">
  <h3><%= @user.profile.name %></h3>
  <% if current_user_profile?(@profile) %>
    <p class="delete"><%= link_to 'Delete Account', @user, :method => :delete, :confirm => 'Are you sure you wish to delete your account? All of your data will be lost.' %></p>
  <% end %>

  <% unless @user.email.blank? %>
    <p class="maininfo">Email:&nbsp;<%= @user.email %></p>
  <% end %>
</div>

<div id="edit_profile">
  <%= render :partial => 'profiles/edit_settings_form' %>
</div>