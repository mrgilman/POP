<%= form_for(@problem, :validate => true) do |f| %>

  <%= f.hidden_field :published_at, :value => Time.now %>

  <%= render partial: "problem_form", locals: { f: f } %>

  <%= render partial: "problems/solution_form", locals: { f: f } %>

  <div id="post_options" class="clearfix">
    <div id="issue_container" class="pull-left">
      <%= select_tag "problem[issue_ids][]", options_for_select([["", ""]]+ Issue.all.collect{ |issue| [issue.name,issue.id] } ), :class=>'chzn-select', :data => { :placeholder => "Select an Issue (Optional)" } %>
    </div>
  </div>

  <div id="button">
    <%= f.submit 'Save', :class => 'btn btn-large btn-gop-red' %>
  </div>

<% end %>