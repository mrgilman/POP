<div id="wrapper">
  <div id="content">
    <div id="problemHead">
      <h1>What people are thinking</h1>
      <%= link_to "Add a New Problem, #{current_user.profile.first_name}", new_problem_path, :id => "indexNewProblem" %>
    </div>
    <div id="problems">
    <% @problems.each do |problem| %>
      <div class="problem">
        <p><%= link_to problem.body, problem %></p>
        <% unless problem.user.nil? %>
        <p><%= problem.user.profile.name %></p>
        <% end %>
      </div>
    <% end %>
    </div>
  </div>
</div>